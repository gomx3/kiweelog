---
const buddahBless =
    '//                   _ooOoo_\n' +
    '//                  o8888888o\n' +
    '//                  88" . "88\n' +
    '//                  (| -_- |)\n' +
    '//                  O\\  =  /O\n' +
    "//               ____/`---'\\____\n" +
    "//             .'  \\\\|     |//  `.\n" +
    '//            /  \\\\|||  :  |||//  \\\n' +
    '//           /  _||||| -:- |||||-  \\\n' +
    '//           |   | \\\\\\  -  /// |   |\n' +
    "//           | \\_|  ''\\---/''  |   |\n" +
    '//           \\  .-\\__  `-`  ___/-. /\n' +
    "//         ___`. .'  /--.--\\  `. . __\n" +
    '//      ."" \'<  `.___\\_<|>_/___.\'  >\'"".\n' +
    '//     | | :  `- \\`.;`\\ _ /`;.`/ - ` : | |\n' +
    '//     \\  \\ `-.   \\_ __\\ /__ _/   .-` /  /\n' +
    "//======`-.____`-.___\\_____/___.-`____.-'======\n" +
    "//                   `=---='\n" +
    '//\n' +
    '//^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^\n' +
    '//        Budda Bless        Never Crash'
---

<div class="relative">
    <pre
        id="buddha-text"
        class="text-xs leading-[0.9rem] text-primary-800 dark:text-primary-700 p-4 overflow-x-auto rounded-[0.7rem]
        border border-stone-200 bg-stone-100 dark:bg-stone-800 dark:border-stone-700">{buddahBless}</pre>

    <button
        id="copy-button"
        class="absolute top-2 right-2 px-2 py-1 cursor-pointer rounded-[0.375rem] text-[0.75rem] text-stone-400
            border border-stone-300 dark:border-stone-600 transition-colors duration-200 hover:bg-stone-200 dark:hover:bg-stone-900"
    >
        Copy
    </button>
</div>

<script>
    const copyButton = document.getElementById('copy-button')
    const buddhaText = document.getElementById('buddha-text')?.innerText

    if (copyButton && buddhaText) {
        copyButton.addEventListener('click', () => {
            navigator.clipboard
                .writeText(buddhaText)
                .then(() => {
                    copyButton.innerText = 'Copied!'
                    setTimeout(() => {
                        copyButton.innerText = 'Copy'
                    }, 2000)
                })
                .catch((err) => console.error('Copy failed!', err))
        })
    }
</script>
