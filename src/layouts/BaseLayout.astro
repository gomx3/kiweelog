---
import Header from '../common/header/Header.astro'
import Footer from '../common/footer/Footer.astro'
import '../styles/global.css'

import { WEBPAGE_INFO } from '../constants'
---

<html lang="ko">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{WEBPAGE_INFO.TITLE}</title>
    </head>
    <body>
        <div class="flex flex-col justify-center items-center px-[3rem]">
            <div class="max-w-[912px] w-full">
                <Header />
                <main>
                    <slot />
                </main>
                <Footer />
            </div>
        </div>
    </body>
</html>
