---
interface Props {
    url: string
    title: string
    description: string
    image: {
        url: string
        alt: string
    }
}

const { url, title, description, image } = Astro.props
---

<a href={url} class="group flex flex-col tablet:flex-row gap-4">
    <div
        class="w-full aspect-[12/7] tablet:w-[18rem] tablet:h-[10.5rem] border border-stone-200 dark:border-stone-800 rounded-[8px] overflow-hidden relative flex-shrink-0"
    >
        <img
            src={image.url}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
        />
    </div>

    <div class="py-2">
        <h3
            class="text-[1.25rem] font-medium text-stone-900 group-hover:text-primary-800 dark:text-white mb-2 line-clamp-2 transition-colors duration-200"
        >
            {title}
        </h3>

        <p class="text-stone-600 dark:text-stone-400 line-clamp-2">
            {description}
        </p>
    </div>
</a>
